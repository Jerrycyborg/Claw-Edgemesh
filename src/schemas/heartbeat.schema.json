{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "EdgeNodeHeartbeat",
  "type": "object",
  "required": ["nodeId", "timestamp", "capabilities", "health"],
  "properties": {
    "nodeId": { "type": "string" },
    "timestamp": { "type": "string" },
    "capabilities": {
      "type": "object",
      "properties": {
        "cpu": { "type": "number" },
        "gpu": { "type": "boolean" },
        "npu": { "type": "boolean" },
        "ramGb": { "type": "number" }
      }
    },
    "health": {
      "type": "object",
      "properties": {
        "online": { "type": "boolean" },
        "load": { "type": "number" },
        "temperatureC": { "type": "number" }
      }
    }
  }
}
